pipeline {
    agent any
    
    environment {
        PYTHON_VERSION = '3'
        VENV_DIR = 'venv'
        PID_FILE = 'myapp.pid'
        REPO_URL = 'https://github.com/assafNW/Devops-CI-CD-Exercise.git'
        DOCKERHUB_REPO = 'devops-ci-cd-dev'
        EMAIL_AUTHOR = "assaf.naaman.work@gmail.com"
        JIRA_JENKINS_USER = "712020:10dea211-8b58-46e4-aaca-6e942f7d405e"
        JIRA_ASIGNEE_USER = "712020:8075411c-abf1-445b-b14e-3d659e5c8923"
    }
    
    tools {
        allure 'Allure'
    }

    stages {
        stage('Checkout Source Code') {
            steps {
                echo "Cloning repository from GitHub..."
                checkout scm
                git branch: 'main', url: "${REPO_URL}"
                sh 'ls'
            }
        }

        stage('Setup Environment') {
            steps {
                script {
                    sh 'echo "Setting up Python environment"'
                    sh 'apt install -y python3 python3-venv python3-pip'
                    sh 'python${PYTHON_VERSION} -m venv ${VENV_DIR}'
                    sh '. ${VENV_DIR}/bin/activate && pip install --upgrade pip'
                    sh '. ${VENV_DIR}/bin/activate && pip install -r requirements.txt'
                    echo "Running app in the background..."
                    sh '''
                    . ${VENV_DIR}/bin/activate && nohup python3 main.py > output.log 2>&1 &
                    echo $! > ${PID_FILE}
                    '''
                }
            }
        }

        stage('Lint Code') {
            steps {
                script {
                    sh '. ${VENV_DIR}/bin/activate && flake8 app/ --output-file=reports/flake8.txt || true'
                    sh '. ${VENV_DIR}/bin/activate && pylint app/ --output=reports/pylint.txt || true'
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'reports/*.txt', allowEmptyArchive: true
                }
            }
        }
        
        stage('Unit Tests') {
            steps {
                script {
                    sh 'mkdir -p reports'
                    sh '. ${VENV_DIR}/bin/activate && pytest tests/unit/ -v --alluredir=allure-results/unit --cov=app --cov-report=xml --cov-report=html --junit-xml=reports/unit-tests.xml'
                }
            }
            post {
                always {
                    junit 'reports/unit-tests.xml'
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'htmlcov',
                        reportFiles: 'index.html',
                        reportName: 'Unit Test Coverage Report'
                    ])
                    archiveArtifacts artifacts: 'htmlcov/**/*', allowEmptyArchive: false
                }
            }
        }
        
        stage('Integration Tests') {
            steps {
                script {
                    sh '. ${VENV_DIR}/bin/activate && pytest tests/integration/ -v --alluredir=allure-results/integration --cov=app --cov-report=xml --cov-report=html --junit-xml=reports/integration-tests.xml'
                }
            }
            post {
                always {
                    junit 'reports/integration-tests.xml'
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'htmlcov',
                        reportFiles: 'index.html',
                        reportName: 'Integration Tests Coverage Report'
                    ])
                    archiveArtifacts artifacts: 'htmlcov/**/*', allowEmptyArchive: false
                }
            }
        }
        
        stage('End-to-End Tests') {
            steps {
                script {
                    sh '''
                        . ${VENV_DIR}/bin/activate
                        export DISPLAY=:99
                        Xvfb :99 -screen 0 1024x768x24 > /dev/null 2>&1 &
                        sleep 3
                        pytest tests/e2e/ -v --alluredir=allure-results/e2e --cov=app --cov-report=xml --cov-report=html --junit-xml=reports/e2e-tests.xml
                        killall Xvfb || true
                    '''
                }
            }
            post {
                always {
                    junit 'reports/e2e-tests.xml'
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'htmlcov',
                        reportFiles: 'index.html',
                        reportName: 'E2E Tests Coverage Report'
                    ])
                    archiveArtifacts artifacts: 'htmlcov/**/*', allowEmptyArchive: false
                }
            }
        }
        
        stage('Calculating App Version') {
            steps {
                script {
                    withCredentials([
                        usernamePassword(credentialsId: 'github-token', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_TOKEN')
                    ]) {
                        sh """
                            git config user.name "jenkins-local"
                            git config user.email "jenkins-local@gmail.com"
                            git remote set-url origin https://${GIT_USER}:${GIT_TOKEN}@github.com/assafNW/Devops-CI-CD-Exercise.git
                            git fetch --tags
                        """
                        def latestTag = sh(
                            script: "git tag --sort=-v:refname | grep -Eo 'v[0-9]+\\.[0-9]+\\.[0-9]+' | head -n1",
                            returnStdout: true
                        ).trim()

                        echo "Current version: ${latestTag}"
                        env.newVersion = ''
                        if (latestTag == '') {
                            env.newVersion = 'v1.0.0'
                        }
                        else {
                            def parts = latestTag.replace('v','').tokenize('.')
                            def major = parts[0].toInteger()
                            def minor = parts[1].toInteger()
                            def patch = parts[2].toInteger()
                            if (patch == 9){
                                patch = 0
                                minor += 1
                            }
                            else {
                                patch += 1
                            }
                            env.newVersion = "v${major}.${minor}.${patch}"
                        }
                        
                        echo "New version: ${env.newVersion}"

                        echo "---------------------------------------"
                        echo "   New Release Version: ${env.newVersion}"
                        echo "---------------------------------------"
                    }
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    withCredentials([
                        usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')
                    ]) {
                        
                        sh """
                            echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                            echo "Building ${env.newVersion}..."

                            docker build -f docker/dockerfile -t ${DOCKER_USER}/${DOCKERHUB_REPO}:${env.newVersion} .
                            docker tag ${DOCKER_USER}/${DOCKERHUB_REPO}:${env.newVersion} ${DOCKER_USER}/${DOCKERHUB_REPO}:latest
                            
                            echo "Pushing Docker images..."
                            docker push ${DOCKER_USER}/${DOCKERHUB_REPO}:${env.newVersion}
                            docker push ${DOCKER_USER}/${DOCKERHUB_REPO}:latest
                            
                            docker logout
                        """
                    }
                }
            }
        }

        stage('Push GitHub Tag') {
            steps {
                script {
                    withCredentials([
                        usernamePassword(credentialsId: 'github-token', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_TOKEN')
                    ]) {
                        sh """
                            git config user.name "jenkins-local"
                            git config user.email "jenkins-local@gmail.com"
                            git remote set-url origin https://${GIT_USER}:${GIT_TOKEN}@github.com/assafNW/Devops-CI-CD-Exercise.git
                        """
                        
                        echo "Pushing new tag to GitHub..."
                        
                        sh """
                            git tag -a ${env.newVersion}-dev -m "jenkins-local: Build: ${env.JOB_NAME} - ${env.BUILD_NUMBER}"
                            git push origin ${env.newVersion}-dev
                        """
                    }
                }
            }
        }

        // stage('Build & Push Docker Image and GitHub Tag') {
        //     steps {
        //         script {
        //             withCredentials([
        //                 usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS'),
        //                 usernamePassword(credentialsId: 'github-token', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_TOKEN')
        //             ]) {
        //                 sh """
        //                     git config --global user.name "jenkins-local"
        //                     git config --global user.email "jenkins-local@gmail.com"
        //                     git remote set-url origin https://${GIT_USER}:${GIT_TOKEN}@github.com/assafNW/Devops-CI-CD-Exercise.git
        //                     git fetch --tags
        //                 """
        //                 def latestTag = sh(
        //                     script: "git tag --sort=-v:refname | grep -Eo 'v[0-9]+\\.[0-9]+\\.[0-9]+' | head -n1",
        //                     returnStdout: true
        //                 ).trim()

        //                 echo "Current version: ${latestTag}"
        //                 def newVersion
        //                 if (latestTag == '') {
        //                     newVersion = 'v1.0.0'
        //                 }
        //                 else {
        //                     def parts = latestTag.replace('v','').tokenize('.')
        //                     def major = parts[0].toInteger()
        //                     def minor = parts[1].toInteger()
        //                     def patch = parts[2].toInteger()
        //                     if (patch == 9){
        //                         patch = 0
        //                         minor = 1
        //                     }
        //                     else {
        //                         patch += 1
        //                     }
        //                     newVersion = "v${major}.${minor}.${patch}"
        //                 }
                        
        //                 echo "New version: ${newVersion}"

        //                 echo "---------------------------------------"
        //                 echo "   New Release Version: ${newVersion}"
        //                 echo "---------------------------------------"

        //                 sh """
        //                     echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
